<scene version="0.3.0">
	<integrator type="volpath_simple">
		<integer name="maxDepth" value="3"/>
	</integrator>

	<medium type="heterogeneous" id="smoke">
		<string name="method" value="simpson"/>

		<volume name="density" type="gridvolume">
			<string name="filename" value="smoke.vol"/>
		</volume>

		<volume name="albedo" type="constvolume">
			<spectrum name="value" value="0.9"/>
		</volume>
		<float name="densityMultiplier" value="100"/>
	</medium>

	<shape type="obj">
		<string name="filename" value="bounds.obj"/>

		<ref name="interior" id="smoke"/>
	</shape>

	<shape type="obj">
		<!-- Shiny floor -->
		<string name="filename" value="plane.obj"/>

		<bsdf type="diffuse">
			<rgb name="diffuseReflectance" value=".2, .2, .3"/>
		</bsdf>
		<transform name="toWorld">
			<translate y=".48"/>
		</transform>
	</shape>

	<camera type="perspective">
		<transform name="toWorld">
			<lookAt target="-0.166029, 0.148984, -0.537402" origin="-0.61423, 0.154197, -1.43132" up="-0.000640922, -0.999985, -0.00551019"/>
		</transform>
		<float name="focusDepth" value="1.25668"/>
		<float name="fov" value="35.19"/>

		<sampler type="ldsampler">
			<integer name="sampleCount" value="32"/>
		</sampler>

		<film type="exrfilm">
			<integer name="height" value="576"/>
			<integer name="width" value="768"/>
		</film>
	</camera>

	<shape type="sphere">
		<point name="center" x="0" y="-2" z="-1"/>
		<float name="radius" value=".2"/>

		<luminaire type="area">
			<spectrum name="intensity" value="400"/>
		</luminaire>
	</shape>
</scene>
