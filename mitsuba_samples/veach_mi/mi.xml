<?xml version="1.0" encoding="utf-8"?>

<!-- MI test scene from Eric Veach's thesis - modeled
     after a file by Steve Marschner (CS667)
-->
<scene version="0.3.0">
	<integrator type="direct">
		<integer name="luminaireSamples" value="4"/>
		<integer name="bsdfSamples" value="4"/>
	</integrator>

	<shape type="sphere">
		<point name="center" x="10" y="10" z="4"/>
		<float name="radius" value=".5"/>

		<luminaire type="area">
			<rgb name="intensity" value="800, 800, 800"/>
		</luminaire>

		<bsdf type="diffuse">
			<rgb name="reflectance" value="0,0,0"/>
		</bsdf>
	</shape>

	<shape type="sphere">
		<point name="center" x="-1.25" y="0" z="0"/>
		<float name="radius" value=".1"/>

		<luminaire type="area">
			<rgb name="intensity" value="100, 100, 100"/>
		</luminaire>

		<bsdf type="diffuse">
			<rgb name="reflectance" value="0,0,0"/>
		</bsdf>
	</shape>

	<shape type="sphere">
		<point name="center" x="-3.75" y="0" z="0"/>
		<float name="radius" value=".03333"/>

		<luminaire type="area">
			<rgb name="intensity" value="901.803 901.803 901.803"/>
		</luminaire>

		<bsdf type="diffuse">
			<rgb name="reflectance" value="0,0,0"/>
		</bsdf>
	</shape>

	<shape type="sphere">
		<point name="center" x="1.25" y="0" z="0"/>
		<float name="radius" value=".3"/>

		<luminaire type="area">
			<rgb name="intensity" value="11.1111 11.1111 11.1111"/>
		</luminaire>

		<bsdf type="diffuse">
			<rgb name="reflectance" value="0,0,0"/>
		</bsdf>
	</shape>

	<shape type="sphere">
		<point name="center" x="3.75" y="0" z="0"/>
		<float name="radius" value=".9"/>

		<luminaire type="area">
			<rgb name="intensity" value="1.23457 1.23457 1.23457"/>
		</luminaire>

		<bsdf type="diffuse">
			<rgb name="reflectance" value="0,0,0"/>
		</bsdf>
	</shape>

	<shape type="obj">
		<string name="filename" value="plate1.obj"/>

		<bsdf type="roughplastic">
			<rgb name="diffuseReflectance" value="0.07 0.09 0.13"/>
			<spectrum name="specularReflectance" value="1"/>
			<float name="intIOR" value="2"/>
			<float name="alpha" value="0.005"/>
		</bsdf>
	</shape>

	<shape type="obj">
		<string name="filename" value="plate2.obj"/>

		<bsdf type="roughplastic">
			<rgb name="diffuseReflectance" value="0.07 0.09 0.13"/>
			<spectrum name="specularReflectance" value="1"/>
			<float name="intIOR" value="2"/>
			<float name="alpha" value="0.02"/>
		</bsdf>
	</shape>

	<shape type="obj">
		<string name="filename" value="plate3.obj"/>

		<bsdf type="roughplastic">
			<rgb name="diffuseReflectance" value="0.07 0.09 0.13"/>
			<spectrum name="specularReflectance" value="1"/>
			<float name="intIOR" value="2"/>
			<float name="alpha" value="0.05"/>
		</bsdf>
	</shape>

	<shape type="obj">
		<string name="filename" value="plate4.obj"/>

		<bsdf type="roughplastic">
			<rgb name="diffuseReflectance" value="0.07 0.09 0.13"/>
			<spectrum name="specularReflectance" value="1"/>
			<float name="intIOR" value="2"/>
			<float name="alpha" value="0.1"/>
		</bsdf>
	</shape>

	<shape type="obj">
		<string name="filename" value="floor.obj"/>

		<bsdf type="diffuse">
			<rgb name="reflectance" value="0.4 0.4 0.4"/>
		</bsdf>
	</shape>

	<camera type="perspective">
		<transform name="toWorld">
			<scale x="-1"/>
			<lookAt origin="0, 2, 15" target="0, -2, 2.5" up="0, 1, 0"/>
		</transform>
		<float name="fov" value="28"/>

		<sampler type="ldsampler">
			<integer name="sampleCount" value="16"/>
			<integer name="depth" value="1"/>
		</sampler>

		<film type="exrfilm">
			<integer name="width" value="768"/>
			<integer name="height" value="512"/>
			<boolean name="banner" value="true"/>

			<rfilter type="gaussian"/>
		</film>
	</camera>
</scene>
